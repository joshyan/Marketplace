<?xml version="1.0"?>

<config>
	<sections>
		<jbmarketplace>
			<label>Super Simple Marketplace</label>
			<tab>general</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			
			<groups>
				<jbmarketplace translate="label" module="jbmarketplace">
					<label>Marketplace Options</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					
					<fields>
						
						<vendors_role translate="label">
							<label>Vendors Role</label>
							<frontend_type>select</frontend_type>
							<source_model>jbmarketplace/adminroles</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</vendors_role>
						
						<notify_vendors translate="label">
							<label>Notify Vendors?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</notify_vendors>
						
						<notify_order_status translate="label">
							<label>Notify Vendors When Order Is</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</notify_order_status>
						
						<email_template translate="label">
							<label>Email Template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_template>
						
						<email_from_name translate="label">
							<label>Email From Name</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_from_name>
						
						<email_from translate="label">
							<label>Email From</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_from>

						<profile_id translate="label">
							<label>Import Profile ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</profile_id>

					</fields>
				
				</jbmarketplace>
			</groups>
		</jbmarketplace>
	</sections>
</config>